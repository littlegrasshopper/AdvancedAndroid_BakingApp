<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:minHeight="250dp"
    android:minWidth="180dp"
    android:orientation="horizontal"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c842f4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_berry_cupcake"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_berry_cupcake" />

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/widget_recipe_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffca"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_recipe_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_berry_cupcake" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffca">

            <TextView
                android:id="@+id/widget_recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Title" />

            <TextView
                android:id="@+id/widget_ingredients_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>