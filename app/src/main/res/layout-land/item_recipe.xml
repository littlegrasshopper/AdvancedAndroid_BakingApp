<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recipe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_recipe_cardview"
        android:layout_width="@dimen/recipeCardWidth"
        android:layout_height="@dimen/recipeCardHeight"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRecipeImage"
                android:layout_width="@dimen/recipeCardWidth"
                android:layout_height="@dimen/recipeImageHeight"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/recipe_image"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="@dimen/recipeTitleTextSize" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>